{% extends 'base.html.twig' %}

{% block body %}
    <h3>Tous les articles</h3>

    {% if articles|length == 0 %}
      <p>Aucun article trouv√© (T(oo)T)</p>

    {% else %}

    <table>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Premiers mots</th>
                <th>Publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.name }}</a></td>
                <td>{{ article.content[0:50] }}...</td>
                <td>{% if article.date %}{{ article.date|date('d/m/Y') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('article_show', { 'id': article.id }) }}">show</a>
                        </li>
                        {% if app.user %}
                        <li>
                            <a href="{{ path('article_edit', { 'id': article.id }) }}">edit</a>
                        </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endif %}

    <ul>
        <li>
            <a href="{{ path('article_new') }}">Nouvel article</a>
        </li>
    </ul>
{% endblock %}
